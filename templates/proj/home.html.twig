{% extends "base.html.twig" %}

{% block title %}Poker Squares{% endblock %}

{% block body %}
    <div class="poker-squares">
        <div class="poker-grid">
            {% for y, row in pokerSquares.getBoard().getBoard() %}
                {% for x, cell in row %}
                    <div class="poker-card">
                        {% if cell is null %}
                            <a class="card-btn" href="{{ path('projSetCard', { x: x, y: y }) }}">ðŸ‚ </a>
                        {% else %}
                            <div class="
                                {% if cell.getSuite() == 'h' or cell.getSuite() == 'd' %}
                                    red
                                {% endif %}
                            ">
                                {{ cell.getAsString() }} 
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            {% endfor %}
            {% for i in 0..5 %}
                {% for j in 0..5 %}
                    {% if i == 5 and j == 5 %}
                    {% elseif i == 5 %}
                        <div class="points points{{ i }}-{{ j }}">
                            {{ pokerSquares.getBoard().getPoints(i, j) }}
                        </div>
                    {% elseif j == 5 %}
                        <div class="points points{{ i }}-{{ j }}">
                            {{ pokerSquares.getBoard().getPoints(i, j) }}
                        </div>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </div>
        
        <div class="next-card">
            {% set nextCard = pokerSquares.getNextCard() %}
            <div class="
                {% if nextCard.getSuite() == 'h' or nextCard.getSuite() == 'd' %}
                    red
                {% endif %}
            ">
                {{ nextCard.getAsString() }}
            </div>
        </div>
    </div>
{% endblock %}